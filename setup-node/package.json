{
  "name": "@brandtotal/actions_setup-node",
  "version": "0.0.0",
  "private": true,
  "description": "GitHub actions for setting up a Node.js repository, with support for .nvmrc",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc --project ./tsconfig.build.json",
    "build:watch": "yarn build --watch",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint ./src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build && git add ."
    }
  },
  "dependencies": {
    "@actions/core": "^1.2.0",
    "@actions/exec": "^1.0.2",
    "@actions/io": "^1.0.1",
    "@pkgjs/nv": "^0.0.1",
    "fs-extra": "^8.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^24.0.25",
    "@types/js-yaml": "^3.12.1",
    "@types/node": "^12.12.22",
    "@typescript-eslint/parser": "^2.13.0",
    "@zeit/ncc": "^0.20.5",
    "eslint": "^6.8.0",
    "eslint-plugin-github": "^3.4.0",
    "eslint-plugin-jest": "^23.1.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "js-yaml": "^3.13.1",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.4"
  }
}
